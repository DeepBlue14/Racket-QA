#lang racket

(require racket/file)

(define output (open-output-file "./../output/WebPage.rkt"
                                 #:mode 'text
                                 #:exists 'update))

;generate (unchanging) main page
(define (generateMainPage fileList reqList inclList provList procList docLst)
  (write-string "#lang racket\n" output)
